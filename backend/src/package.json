{
  "name": "virlbox-backend",
  "version": "2.0.0",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "dev": "ts-node src/main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src",
    "format": "prettier --write src",
    "db:init": "ts-node scripts/init-db.ts",
    "db:seed": "ts-node scripts/seed-db.ts",
    "db:migrate": "typeorm migration:run",
    "generate:agents": "ts-node scripts/generate-agents.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.0",
    "redis": "^4.6.0",
    "jsonwebtoken": "^9.1.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "axios": "^1.6.0",
    "typeorm": "^0.3.17",
    "joi": "^17.11.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.1.0",
    "stripe": "^14.0.0",
    "aws-sdk": "^2.1500.0",
    "nodemailer": "^6.9.7",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.21",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/jest": "^29.5.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "eslint": "^8.52.0",
    "prettier": "^3.1.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0"
  }
